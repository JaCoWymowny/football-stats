{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "moduleDetection": "force",
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
