{
  "name": "football-stats",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "server-install": "cd server && npm install",
    "client-install": "cd client && npm install",
    "install": "npm run client-install && npm run server-install ",
    "server": "cd server && npm run watch",
    "client": "cd client && npm run dev",
    "prisma": "cd server && npx prisma studio",
    "prisma-migrate": "cd server && npx prisma migrate dev --name init && npx prisma generate",
    "dev": "concurrently \"npm run server\" \"npm run client\" \"npm run prisma\"",
    "pcheck": "prettier --check 'client/src/**/*' 'server/src/**/*'",
    "pformat": "prettier --write 'client/src/**/*' 'server/src/**/*'",
    "prepare": "husky install"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "husky": "^8.0.0",
    "prettier": "^3.3.3"
  }
}
